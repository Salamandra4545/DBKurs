<Page x:Class="Rental.Pages.DiscountAndPricingManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Rental.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Управление скидками и ценами">

    <Grid>
        <TabControl>
            <!-- Tab 1: Прайс-лист услуг -->
            <TabItem Header="Прайс-лист услуг">
                <StackPanel>
                    <DataGrid x:Name="servicesDataGrid" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="200"/>
                    <Button Content="Добавить услугу" Click="OnAddServiceClick" Width="150" Margin="5"/>
                    <Button Content="Удалить услугу" Click="OnDeleteServiceClick" Width="150" Margin="5"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
